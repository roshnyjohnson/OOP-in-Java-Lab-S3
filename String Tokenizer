import java.io.*;
import java.util.StringTokenizer;
public class Program9st
{
 public static void main(String[] args)
 {
 int sum=0;
 try
 {
 BufferedReader r=new BufferedReader(new InputStreamReader(System.in));
 System.out.println("Enter the integers:");
 String input=r.readLine();
 StringTokenizer st=new StringTokenizer(input);
 while(st.hasMoreTokens())
 {
 String token=st.nextToken();
 System.out.println(token);
 sum=sum+ Integer.parseInt(token);
 }
 System.out.println("Sum :"+sum);
 }
 catch(Exception e)
 {
 System.out.println("Error occcured");
 }
 }
}
Program9file
import java.io.*;
public class Program9file
{
 public static void main(String[] args)
 {
 try
 {
 int sum=0,ch;
 int integer = 0;
 BufferedReader r=new BufferedReader(new InputStreamReader(System.in));
 System.out.println("Enter file name:");
 String file_name=r.readLine();
 System.out.println("Enter the number of integers:");
 int n=Integer.parseInt(r.readLine());
 DataOutputStream d1=new DataOutputStream(new FileOutputStream(file_name));
 for(int i=1;i<=n;i++)
 {
 System.out.println("Enter integer" +i);
 int num=Integer.parseInt(r.readLine());
 d1.writeInt(num);
 }
 r.close();
 d1.close();
 DataInputStream d2=new DataInputStream(new FileInputStream(file_name));
 try
 //while((ch=d2.read())!=-1)
 {
 while(true)
 {
 integer=d2.readInt();
 sum=sum + integer;
 }
 }
 catch(EOFException e)
 {
 }
 d2.close();
 System.out.println("Sum is :"+sum);
 }
 catch(Exception e)
 {
 System.out.println("Error occured");
 }
 }
}
